@model IEnumerable<E_Invoice_system.Models.Sale>

<div class="card card-no-padding">
    <div class="card-header card-header-flex" style="padding: 1.5rem 1.5rem 0 1.5rem;">
        <div class="card-title">
            Sales Transactions
            <p class="text-muted font-sm font-normal" style="margin-top: 0.25rem;">Manage and track your business sales</p>
        </div>
        <a asp-action="Create" class="btn-primary">
            <i class="ph-plus-circle"></i> New Sale
        </a>
    </div>
    
    <div class="table-responsive">
        <table class="styled-table" style="min-width: 1000px;">
            <thead>
                <tr>
                    <th style="padding-left: 1.5rem;">Date</th>
                    <th>Product / Service</th>
                    <th>Customer Name</th>
                    <th>QTY / UNIT</th>
                    <th>Price</th>
                    <th>Expiry Date</th>
                    <th>Total Amount</th>
                    <th class="text-center">Method</th>
                    <th class="text-center">Status</th>
                    <th class="text-center" style="padding-right: 1.5rem;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var sale in Model)
                    {
                        <tr>
                            <td style="padding-left: 1.5rem;">
                                <div class="font-bold font-sm">@sale.date.ToString("MMM dd, yyyy")</div>
                                <div class="text-muted font-xs">@sale.date.ToString("hh:mm tt")</div>
                            </td>
                            <td>
                                <div class="font-bold">@sale.prod_name_service</div>
                            </td>
                            <td class="text-muted">@sale.customer_name</td>
                            <td>
                                <span style="background: var(--bg-light); padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.85rem; font-weight: 500; border: 1px solid var(--border);">
                                    @System.Text.RegularExpressions.Regex.Replace(sale.qty_unit_type ?? "", @"[^0-9.-]", "")
                                </span>
                            </td>
                            <td class="text-muted">$@sale.price.ToString("N2")</td>
                            <td class="text-muted">@(sale.expiry_date?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                            <td>
                                <div class="font-bold text-primary" style="font-size: 1rem;">$@sale.total_price.ToString("N2")</div>
                                @if(sale.discount > 0) {
                                    <div class="text-success font-xs">Saved $@sale.discount.ToString("N2")</div>
                                }
                            </td>
                            <td class="text-center">
                                <span class="font-medium font-sm">@sale.payment_method</span>
                            </td>
                            <td class="text-center">
                                <span class="status-badge" style="background: #e0f2fe; color: #0369a1;">
                                    @sale.status
                                </span>
                            </td>
                            <td style="padding-right: 1.5rem;">
                                <div class="actions-container actions-center">

                                    <form asp-action="Delete" asp-route-id="@sale.id" method="post" onsubmit="return confirm('Are you sure you want to delete this sale record?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-icon-sm btn-delete" title="Delete">
                                            <i class="ph-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10" class="empty-state">
                            <i class="ph-shopping-cart empty-state-icon"></i>
                            <p>No sales records found.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


