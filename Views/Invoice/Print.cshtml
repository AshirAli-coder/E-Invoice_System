@using System.Text.Json
@model E_Invoice_system.Models.invoices

@{
    Layout = null;
    var subtotal = Model.price;
    var discount = Model.discount;
    var totalAmount = Model.total_price;
    var isMultiItem = false;
    List<Dictionary<string, object>> items = new List<Dictionary<string, object>>();

    try 
    {
        if (!string.IsNullOrEmpty(Model.prod_name_service) && Model.prod_name_service.Trim().StartsWith("["))
        {
            var jsonElements = JsonSerializer.Deserialize<List<Dictionary<string, JsonElement>>>(Model.prod_name_service);
            if (jsonElements != null)
            {
                isMultiItem = true;
                foreach(var item in jsonElements)
                {
                    var newItem = new Dictionary<string, object>();
                    foreach(var kvp in item)
                    {
                        if (kvp.Value.ValueKind == JsonValueKind.Number)
                            newItem[kvp.Key] = kvp.Value.GetDecimal();
                        else if (kvp.Value.ValueKind == JsonValueKind.String)
                            newItem[kvp.Key] = kvp.Value.GetString();
                        else
                            newItem[kvp.Key] = kvp.Value.ToString();
                    }
                    items.Add(newItem);
                }
                
                if (subtotal == 0 && items.Any())
                {
                    subtotal = items.Sum(i => (decimal)i["price"] * (decimal)i["qty"]);
                }
            }
        }
    }
    catch
    {
        isMultiItem = false;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice #@(Model.invoice_no ?? Model.id.ToString())</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #ff4757;
            --navy: #1a1c1e;
            --text-dark: #1f2937;
            --text-light: #6b7280;
            --bg-light: #f8fafc;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            background: #f3f4f6;
            font-family: 'Inter', sans-serif;
            color: var(--text-dark);
            padding: 2rem;
            min-height: 100vh;
        }

        .invoice-a4 {
            width: 210mm;
            min-height: 297mm;
            background: white;
            margin: 0 auto;
            position: relative;
            display: flex;
            flex-direction: column;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        /* Header Layout */
        .header-bar {
            background: var(--navy);
            height: 120px;
            display: flex;
            justify-content: space-between;
            position: relative;
            overflow: hidden;
            -webkit-print-color-adjust: exact;
        }

        .logo-section {
            background: white;
            width: 45%;
            height: 100%;
            display: flex;
            align-items: center;
            padding-left: 2rem;
            clip-path: polygon(0 0, 100% 0, 85% 100%, 0 100%);
            -webkit-print-color-adjust: exact;
        }

        .logo-box {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .logo-icon {
            background: #ff4757;
            color: white;
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            font-weight: 900;
            font-size: 1.75rem;
        }

        .company-info h1 {
            font-size: 1.4rem;
            font-weight: 900;
            margin: 0;
            letter-spacing: -0.01em;
            color: var(--navy);
        }

        .company-info p {
            font-size: 0.65rem;
            color: var(--text-light);
            text-transform: uppercase;
            font-weight: 700;
            margin-top: -2px;
        }

        .id-section {
            background: var(--primary);
            width: 35%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding-right: 2rem;
            clip-path: polygon(15% 0, 100% 0, 100% 100%, 0 100%);
            color: white;
            -webkit-print-color-adjust: exact;
        }

        .id-text {
            text-align: right;
            font-weight: 800;
            font-size: 0.85rem;
        }

        /* Content Area */
        .main-content {
            padding: 2.5rem;
            flex-grow: 1;
        }

        .address-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            margin-bottom: 2.5rem;
        }

        .addr-label {
            background: var(--navy);
            color: white;
            padding: 4px 15px;
            border-radius: 4px;
            font-size: 0.7rem;
            font-weight: 800;
            display: inline-block;
            margin-bottom: 0.75rem;
            text-transform: uppercase;
            -webkit-print-color-adjust: exact;
        }

        .addr-content { font-size: 0.9rem; line-height: 1.4; }
        .addr-name { font-weight: 900; font-size: 1.1rem; margin-bottom: 2px; }

        /* Table Styling */
        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 2.5rem;
        }

        .items-table thead th {
            background: var(--primary);
            color: white;
            padding: 10px;
            font-size: 0.7rem;
            font-weight: 800;
            text-align: left;
            text-transform: uppercase;
            -webkit-print-color-adjust: exact;
        }

        .items-table tbody td {
            padding: 12px 10px;
            border-bottom: 1px solid #eef2f6;
            font-size: 0.85rem;
            color: var(--text-dark);
            font-weight: 600;
        }

        .text-center { text-align: center; }
        .text-right { text-align: right; }

        /* Summary Area */
        .summary-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-top: 1rem;
        }

        .left-info {
            display: flex;
            gap: 1rem;
        }

        .info-pill-box {
            border: 1px solid #eef2f6;
            border-radius: 12px;
            padding: 1rem;
            min-width: 160px;
        }

        .pill-head {
            background: var(--navy);
            color: white;
            padding: 2px 10px;
            border-radius: 4px;
            font-size: 0.6rem;
            font-weight: 800;
            display: inline-block;
            margin-bottom: 0.5rem;
            -webkit-print-color-adjust: exact;
        }

        .pill-content {
            font-weight: 700;
            font-size: 0.85rem;
            color: var(--text-dark);
        }

        .status-paid { color: #10b981; }

        .right-financials {
            width: 320px;
        }

        .fin-row {
            display: flex;
            justify-content: space-between;
            padding: 5px 0;
            font-weight: 800;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .total-box {
            background: var(--primary);
            color: white;
            margin-top: 0.75rem;
            padding: 12px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%);
            -webkit-print-color-adjust: exact;
        }

        .total-label { font-size: 0.85rem; font-weight: 900; }
        .total-value { font-size: 1.5rem; font-weight: 900; }

        /* Footer Area */
        .sign-area {
            margin-top: 3rem;
            text-align: right;
            padding-right: 2.5rem;
        }

        .sign-line {
            width: 250px;
            border-top: 2px solid #e2e8f0;
            display: inline-block;
            margin-bottom: 4px;
        }

        .sign-text {
            font-size: 0.7rem;
            font-weight: 800;
            text-transform: uppercase;
            color: var(--navy);
        }

        .sign-company {
            font-size: 0.6rem;
            color: var(--text-light);
            font-weight: 700;
        }

        .bottom-bar {
            background: var(--navy);
            height: 40px;
            margin-top: auto;
            -webkit-print-color-adjust: exact;
        }

        @@media print {
            body { background: white; padding: 0; }
            .invoice-a4 { box-shadow: none; margin: 0; border: none; }
            button { display: none; }
        }

        .no-print-btn {
            position: fixed;
            top: 20px;
            right: 20px;
            background: var(--primary);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 700;
            cursor: pointer;
            z-index: 1000;
        }
    </style>
</head>
<body>

    <button class="no-print-btn" onclick="window.print()">PRINT INVOICE</button>

    <div class="invoice-a4">
        <!-- Premium Header -->
        <div class="header-bar">
            <div class="logo-section">
                <div class="logo-box">
                    <div class="logo-icon">S</div>
                    <div class="company-info">
                        <h1>SATA TECHNOLOGIES</h1>
                        <p>Innovating the future</p>
                    </div>
                </div>
            </div>
            <div class="id-section">
                <div class="id-text">
                    ID NO : INV-@(Model.invoice_no ?? Model.id.ToString())
                </div>
            </div>
        </div>

        <div class="main-content">
            <!-- Addresses -->
            <div class="address-grid">
                <div class="bill-to">
                    <div class="addr-label">Invoice To :</div>
                    <div class="addr-content">
                        <p class="addr-name">@Model.buyer_name</p>
                        <p>@Model.buyer_address</p>
                        <p>Phone: @Model.buyer_contact</p>
                    </div>
                </div>
                <div class="bill-from">
                    <div class="addr-label" style="margin-left: auto; display: block; width: fit-content;">Invoice From :</div>
                    <div class="addr-content" style="text-align: right;">
                        <p class="addr-name">SATA TECHNOLOGIES</p>
                        <p>@Model.seller_address</p>
                        <p>Phone: @Model.seller_contact</p>
                        <p>@Model.date.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            </div>

            <!-- Table -->
            <table class="items-table">
                <thead>
                    <tr>
                        <th style="width: 35%;">Product/Service</th>
                        <th class="text-center">Qty/Unit_Type</th>
                        <th class="text-right">Price</th>
                        <th class="text-right">Discount</th>
                        <th class="text-center">Expiry Date</th>
                        <th class="text-right">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @if (isMultiItem)
                    {
                        foreach(var item in items)
                        {
                            <tr>
                                <td>@item["name"]</td>
                                <td class="text-center">@item["qty"] @(item.ContainsKey("unit") ? item["unit"] : "")</td>
                                <td class="text-right">$@(((decimal)item["price"]).ToString("N2"))</td>
                                <td class="text-right" style="color: var(--primary);">-$@(((decimal)item["discount"]).ToString("N2"))</td>
                                <td class="text-center">N/A</td>
                                <td class="text-right">$@(((decimal)item["total"]).ToString("N2"))</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>@Model.prod_name_service</td>
                            <td class="text-center">@Model.qty_unit_type</td>
                            <td class="text-right">$@Model.price.ToString("N2")</td>
                            <td class="text-right" style="color: var(--primary);">-$@Model.discount.ToString("N2")</td>
                            <td class="text-center">N/A</td>
                            <td class="text-right">$@((Model.price - Model.discount).ToString("N2"))</td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Financial Summary -->
            <div class="summary-wrapper">
                <div class="left-info">
                    <div class="info-pill-box">
                        <div class="pill-head">Payment Method :</div>
                        <div class="pill-content">Method: @Model.payment</div>
                    </div>
                    <div class="info-pill-box" style="background: #f0fdf4; border-color: #dcfce7;">
                        <div class="pill-head" style="background: #10b981;">Status :</div>
                        <div class="pill-content status-paid" style="text-transform: uppercase;">@Model.status</div>
                    </div>
                </div>

                <div class="right-financials">
                    <div class="fin-row">
                        <span style="color: var(--text-light);">Subtotal :</span>
                        <span>$@subtotal.ToString("N2")</span>
                    </div>
                    <div class="fin-row" style="color: var(--primary);">
                        <span>Discount :</span>
                        <span>-$@discount.ToString("N2")</span>
                    </div>
                    <div class="total-box">
                        <span class="total-label">TOTAL</span>
                        <span class="total-value">$@totalAmount.ToString("N2")</span>
                    </div>
                </div>
            </div>

            <!-- Notes & Signature -->
            <div style="margin-top: 2rem;">
                <p style="font-weight: 800; font-size: 0.85rem; color: var(--navy);">Thanks for your business</p>
                <p style="font-size: 0.65rem; color: var(--text-light); max-width: 300px; margin-top: 4px; line-height: 1.4;">
                    We value your trust. Please ensure payment is made by the due date mentioned in the terms.
                </p>
            </div>

            <div class="sign-area">
                <div class="sign-line"></div><br/>
                <span class="sign-text">Authorized Signature</span><br/>
                <span class="sign-company">SATA TECHNOLOGIES</span>
            </div>
        </div>

        <!-- Bottom Navy Bar -->
        <div class="bottom-bar"></div>
    </div>
    
    <script>
        window.onload = function() { 
            // Optional: Auto-print on load if needed
            // window.print(); 
        }
    </script>
</body>
</html>
