@model IEnumerable<E_Invoice_system.Models.ReturnDetail>

<div class="card card-no-padding">
    <div class="card-header card-header-flex" style="padding: 1.5rem; border-bottom: 1px solid rgba(0,0,0,0.05);">
        <div style="display: flex; flex-direction: column; gap: 0.5rem;">
            <div class="card-title" style="margin: 0;">Returns History</div>
            <p class="text-muted font-sm">A dedicated ledger for customer returns and refunds.</p>
        </div>
        <a asp-controller="Sale" asp-action="Create" class="btn-primary">
            <i class="ph-plus-circle"></i> New Transaction
        </a>
    </div>
    
    <div class="table-responsive">
        <table class="styled-table" style="min-width: 1000px;">
            <thead>
                <tr>
                    <th style="padding-left: 1.5rem;">Return Date</th>
                    <th>Product Name</th>
                    <th>Customer Name</th>
                    <th>Returned QTY</th>
                    <th>Refund Amount</th>
                    <th class="text-center">Original Sale ID</th>
                    <th class="text-center" style="padding-right: 1.5rem;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var ret in Model)
                    {
                        <tr>
                            <td style="padding-left: 1.5rem;">
                                <div class="font-bold font-sm">@ret.ReturnDate.ToString("MMM dd, yyyy")</div>
                                <div class="text-muted font-xs">@ret.ReturnDate.ToString("hh:mm tt")</div>
                            </td>
                            <td>
                                <div class="font-bold text-danger">@ret.ProductName</div>
                            </td>
                            <td class="text-muted">@ret.CustomerName</td>
                            <td>
                                <span class="font-bold text-danger">@ret.ReturnQty.ToString("N2")</span>
                            </td>
                            <td>
                                <div class="font-bold text-danger" style="font-size: 1rem;">$@ret.RefundAmount.ToString("N2")</div>
                            </td>
                            <td class="text-center">
                                <span class="badge" style="background: #f1f5f9; color: #64748b; padding: 4px 8px; border-radius: 6px; font-weight: 700;">#@ret.OriginalSaleId</span>
                            </td>
                            <td style="padding-right: 1.5rem;">
                                <div class="actions-container actions-center">
                                    <form asp-action="Delete" asp-route-id="@ret.Id" method="post" onsubmit="return confirm('Delete this return record?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-icon-sm btn-delete" title="Delete">
                                            <i class="ph-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="empty-state">
                            <div style="padding: 4rem 2rem; text-align: center;">
                                <i class="ph-arrow-counter-clockwise" style="font-size: 4rem; opacity: 0.1; display: block; margin-bottom: 1rem;"></i>
                                <p class="text-muted">No return records found.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
