@model IEnumerable<E_Invoice_system.Models.invoices>
@{
    ViewData["Title"] = "Dashboard";
}

<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon"><i class="ph-file-text"></i></div>
            <div class="stat-trend trend-up">+12% <i class="ph-trend-up"></i></div>
        </div>
        <div class="stat-label">Total Invoices</div>
        <div class="stat-value">@ViewBag.TotalInvoices</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon" style="background: #eef2ff; color: #4f46e5;"><i class="ph-users"></i></div>
            
        </div>
        <div class="stat-label">Total Customers</div>
        <div class="stat-value">@ViewBag.TotalCustomers</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon" style="background: #ecfdf5; color: #10b981;"><i class="ph-currency-dollar"></i></div>
            
        </div>
        <div class="stat-label">Total Sale</div>
        <div class="stat-value">$@(((decimal?)ViewBag.totalSales ?? 0).ToString("N2"))</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon" style="background: #fffbeb; color: #d97706;"><i class="ph-clock"></i></div>
            
        </div>
        <div class="stat-label">Active Products</div>
        <div class="stat-value">@ViewBag.TotalProducts</div>
    </div>
</div>

<div class="content-grid">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Recent Invoices</div>
            <a asp-controller="Invoice" asp-action="Index" class="btn-primary" style="padding: 0.5rem 1rem; font-size: 0.8rem; background: #BC1823; border: none; color: white;">View All</a>
        </div>
        
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr style="text-align: left; border-bottom: 2px solid var(--border);">
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem;">Invoice ID</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem;">Customer</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem;">Date</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem;">Amount</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem;">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inv in Model)
                {
                    <tr style="border-bottom: 1px solid var(--border);">
                        <td style="padding: 1rem 0.5rem; font-weight: 600;">#@(inv.invoice_no ?? inv.id.ToString())</td>
                        <td style="padding: 1rem 0.5rem;">@inv.customer_name</td>
                        <td style="padding: 1rem 0.5rem;">@inv.date.ToString("MMM dd, yyyy")</td>
                        <td style="padding: 1rem 0.5rem; font-weight: 700;">$@(inv.total_price.ToString("N2"))</td>

                        <td style="padding: 1rem 0.5rem;">
                            @{
                                var statusColor = inv.status == "Paid" ? "#10b981" : (inv.status == "Pending" ? "#ea580c" : "#6b7280");
                                var statusBg = inv.status == "Paid" ? "#ecfdf5" : (inv.status == "Pending" ? "#fff7ed" : "#f3f4f6");
                            }
                            <span style="background: @statusBg; color: @statusColor; padding: 0.25rem 0.75rem; border-radius: 20px; font-size: 0.75rem; font-weight: 600;">@inv.status</span>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" style="padding: 2rem; text-align: center; color: var(--text-muted);">No recent invoices found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card">
        <div class="card-header">
            <div class="card-title">Quick Actions</div>
        </div>
        
        <div style="display: flex; flex-direction: column; gap: 1rem;">
            <a asp-controller="Invoice" asp-action="Create" class="btn-primary" style="justify-content: center;">
                <i class="ph-file-plus"></i> New Invoice
            </a>
            <a asp-controller="Customer" asp-action="Create" class="btn-primary" style="justify-content: center; background: #fff; color: var(--text); border: 1px solid var(--border);">
                <i class="ph-user-plus"></i> Add New Customer
            </a>
            <div style="background: #f8f9fa; padding: 1rem; border-radius: 12px; margin-top: 1rem;">
                <div style="font-weight: 700; font-size: 0.8rem; margin-bottom: 0.5rem;">System Health</div>
                <div style="display: flex; align-items: center; gap: 0.5rem; font-size: 0.8rem; color: #10b981;">
                    <div style="width: 8px; height: 8px; background: #10b981; border-radius: 50%;"></div>
                    All systems operational
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="content-grid" style="grid-template-columns: 2fr 1fr; gap: 1.5rem; margin-top: 1.5rem;">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Invoices Trend</div>
        </div>
        <div style="height: 300px;">
            <canvas id="trendChart"></canvas>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <div class="card-title">Invoices Status</div>
        </div>
        <div style="height: 300px; display: flex; justify-content: center; align-items: center;">
            <canvas id="statusChart"></canvas>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Pie Chart for Status
        const statusCtx = document.getElementById('statusChart').getContext('2d');
        const statusLabels = @Html.Raw(Json.Serialize(ViewBag.StatusLabels));
        const statusCounts = @Html.Raw(Json.Serialize(ViewBag.StatusCounts));
        
        const statusColors = statusLabels.map(label => {
            if (label === 'Paid') return '#10b981'; // Green
            if (label === 'Pending') return '#ea580c'; // Orange (Previous)
            if (label === 'Cancelled') return '#3b82f6'; // Blue
            return '#6b7280'; // Gray default
        });

        new Chart(statusCtx, {
            type: 'pie',
            data: {
                labels: statusLabels,
                datasets: [{
                    data: statusCounts,
                    backgroundColor: statusColors,
                    borderWidth: 2,
                    borderColor: '#ffffff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });

        // Line Chart for Trend
        const trendCtx = document.getElementById('trendChart').getContext('2d');
        
        // gradient for the line chart fill
        var gradient = trendCtx.createLinearGradient(0, 0, 0, 300);
        gradient.addColorStop(0, 'rgba(188, 24, 35, 0.2)');
        gradient.addColorStop(1, 'rgba(188, 24, 35, 0.0)');

        new Chart(trendCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.TrendLabels)),
                datasets: [{
                    label: 'Invoices Issued',
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.TrendData)),
                    backgroundColor: gradient,
                    borderColor: '#BC1823',
                    borderWidth: 2,
                    pointBackgroundColor: '#ffffff',
                    pointBorderColor: '#BC1823',
                    pointBorderWidth: 2,
                    pointRadius: 4,
                    pointHoverRadius: 6,
                    fill: true,
                    tension: 0.4 // Smooth curve
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false } // Hide legend for cleaner look
                },
                scales: {
                    y: { 
                        beginAtZero: true, 
                        grid: { 
                            borderDash: [2, 4],
                            color: '#e5e7eb',
                            drawBorder: false 
                        },
                        ticks: {
                            font: { size: 11 }
                        }
                    },
                    x: { 
                        grid: { display: false },
                        ticks: {
                            font: { size: 11 }
                        }
                    }
                },
                interaction: {
                    intersect: false,
                    mode: 'index',
                },
            }
        });
    });
</script>
