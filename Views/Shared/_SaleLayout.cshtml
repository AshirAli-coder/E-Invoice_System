<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sale Terminal</title>
    
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Phosphor Icons -->
    <script src="https://unpkg.com/phosphor-icons"></script>
    
    <link rel="stylesheet" href="~/css/app-base.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sale.css" asp-append-version="true" />
    
    <style>
        :root {
            --primary: #BC1823; /* Dashboard Red */
            --primary-light: #ffebed;
            --primary-dark: #9c141d;
            --primary-glow: rgba(188, 24, 35, 0.1);
            --bg-app: #f1f5f9;
            --sidebar-bg: #ffffff;
            --surface: #ffffff;
            --surface-hover: #f8fafc;
            --border: rgba(0, 0, 0, 0.04);
            --text-main: #1C2120;
            --text-muted: #64748b;
        }

        body {
            margin: 0;
            padding: 0;
            background-color: var(--bg-app);
            color: var(--text-main);
            font-family: 'Inter', sans-serif;
            overflow: hidden;
            height: 100vh;
        }

        .sale-layout-container {
            display: flex; /* Simplified for 2-column approach */
            height: 100vh;
            width: 100vw;
            background: #f4f7fa;
            overflow: hidden;
        }


        /* Actual Dashboard Sidebar Styling - Fixed Width match */
        .sidebar {
            width: 260px;
            background-color: var(--sidebar-bg);
            border-right: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            position: fixed;
            height: 100vh;
            z-index: 1000;
        }

        .sidebar-header {
            padding: 2.5rem 1.5rem;
            display: flex;
            justify-content: center; /* Center logo */
            align-items: center;
        }

        .sidebar-logo {
            height: 48px; /* Increased size for impact as per pic */
            width: auto;
        }

        .sidebar-nav {
            flex: 1;
            padding: 0 1.25rem;
            margin-top: 1rem;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 1.25rem;
            padding: 0.85rem 1.25rem;
            color: #475569; /* Bluish grey for inactive */
            text-decoration: none;
            border-radius: 12px;
            margin-bottom: 0.5rem;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.2s ease;
        }

        .nav-icon {
            font-size: 1.4rem;
            color: #64748b;
        }

        .nav-item:hover {
            background-color: #f1f5f9;
            color: var(--primary);
        }

        .sale-main-wrapper {
            flex: 1; /* Take full width now */
            display: flex;
            flex-direction: column;
            overflow: hidden;
            background: #f4f7fa;
        }


        /* Top Bar - Sleeker match to SupaPOS */
        .top-bar {
            height: 60px;
            background: white;
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 32px;
            flex-shrink: 0;
        }

        .welcome-msg {
            font-weight: 800;
            font-size: 1.1rem;
            color: var(--text-main);
        }

        .top-bar-right {
            display: flex;
            align-items: center;
            gap: 24px;
        }

        .live-clock {
            font-weight: 600;
            color: var(--text-muted);
            font-size: 0.85rem;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 12px;
            cursor: pointer;
            position: relative;
        }

        .user-avatar-initial {
            width: 36px;
            height: 36px;
            background: var(--primary);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 0.9rem;
            box-shadow: 0 2px 4px rgba(188, 24, 35, 0.2);
        }

        .sale-content-body {
            flex: 1;
            overflow: hidden;
        }

        @@media (max-width: 1024px) {
            .sale-layout-container {
                grid-template-columns: 1fr;
            }
            .sidebar {
                display: none;
            }
            .sale-main-wrapper {
                grid-column: 1;
            }
        }

        #toast-container {
            position: fixed;
            top: 24px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 10000;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .toast {
            background: white;
            border: 1px solid var(--border);
            padding: 16px 24px;
            border-radius: 50px;
            display: flex;
            align-items: center;
            gap: 12px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
            transform: translateY(-100px);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .toast.show {
            transform: translateY(60px);
        }
    </style>
</head>
<body>
    <div class="sale-layout-container">
        <!-- Main Content Area (Now Full Width) -->
        <div class="sale-main-wrapper">
            <header class="top-bar">

                <div class="top-bar-left">
                    <span class="welcome-msg">Welcome back!</span>
                </div>

                <div class="top-bar-right">
                    <span id="liveClock" class="live-clock">Wednesday, July 2, 2025 - 15:55:16</span>
                    
                    <div class="user-profile">
                        @{
                            var userEmail = Context.Session.GetString("UserEmail") ?? "User";
                            var initial = userEmail.Length > 0 ? userEmail.Substring(0, 1).ToUpper() : "U";
                        }
                        <div class="user-info" style="text-align: right; margin-right: 12px;">
                            <div style="font-weight: 700; font-size: 0.85rem; color: var(--text-main);">James Davidson</div>
                            <div style="font-size: 0.7rem; color: var(--text-muted);">Store Manager</div>
                        </div>
                        <div class="user-avatar-initial">
                            @initial
                        </div>
                    </div>
                </div>
            </header>

            <main class="sale-content-body">
                @RenderBody()
            </main>
        </div>
    </div>

    <div id="toast-container"></div>

    <script>
        function updateClock() {
            const now = new Date();
            const options = { 
                weekday: 'long', 
                month: 'long', 
                day: 'numeric',
                year: 'numeric',
                hour: '2-digit', 
                minute: '2-digit', 
                second: '2-digit',
                hour12: false 
            };
            const clockEl = document.getElementById('liveClock');
            if (clockEl) {
                clockEl.innerText = now.toLocaleString('en-US', options).replace(',', ' -');
            }
        }
        setInterval(updateClock, 1000);
        updateClock();

        function showToast(title, message) {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.innerHTML = `
                <i class="ph-check-circle" style="color:var(--primary); font-size:1.5rem;"></i>
                <div style="flex: 1;">
                    <div style="font-weight: 700; font-size: 0.85rem;">${title}</div>
                    <div style="font-size: 0.75rem; color: var(--text-muted);">${message}</div>
                </div>
            `;
            container.appendChild(toast);
            setTimeout(() => toast.classList.add('show'), 10);
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 400);
            }, 3000);
        }

        const successMessage = '@TempData["Success"]';
        if (successMessage) showToast('Success', successMessage);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

</html>
