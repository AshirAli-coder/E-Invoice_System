@model E_Invoice_system.Models.ProductService

<div class="dashboard-panel">
    <div class="page-header">
        <h1 class="page-title-large">
            Edit Product/Service
        </h1>
        <a asp-action="Index" class="btn-secondary">
            <i class="ph-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="form-wrapper form-layout-left-wide">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="date" />
            <input type="hidden" asp-for="image" />

            <div class="form-section">
                <div class="form-section-header">
                   <h3 class="form-section-title">
                       <i class="ph-package" style="color: var(--primary);"></i>
                       Product Information
                   </h3>
               </div>
                
                <div class="form-group">
                    <label class="form-label">Current Image</label>
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.image))
                        {
                            <img src="/product-images/@Model.image" alt="Product Image" style="width: 150px; border-radius: 12px; border: 1px solid var(--border);" />
                        }
                        else
                        {
                            <div style="width: 150px; height: 100px; background: #f8fafc; border-radius: 12px; display: flex; align-items: center; justify-content: center; color: var(--text-dim); border: 1px dashed var(--border);">
                                <i class="ph-image" style="font-size: 2rem;"></i>
                            </div>
                        }
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Update Image</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                </div>
                
                <div class="form-group">
                    <label asp-for="prod_name_service" class="form-label">Item/Service Name</label>
                    <input asp-for="prod_name_service" class="form-control" placeholder="e.g. Laptop Repair, Web Design" required />
                    <span asp-validation-for="prod_name_service" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="barcode" class="form-label">Barcode</label>
                    <input asp-for="barcode" class="form-control" placeholder="Leave empty to auto-generate" />
                </div>

                <div class="form-group">
                    <label asp-for="qty_unit_type" class="form-label">Quantity / Unit Type</label>
                    <input asp-for="qty_unit_type" class="form-control" placeholder="e.g. 1 Unit, 5 Hours" />
                </div>
                
                <div class="form-group">
                    <label asp-for="price" class="form-label">Price ($)</label>
                    <input asp-for="price" type="number" step="0.01" class="form-control" required />
                </div>
                <div class="form-group">
                    <label asp-for="discount" class="form-label">Discount ($)</label>
                    <input asp-for="discount" type="number" step="0.01" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="tax" class="form-label">Tax (%)</label>
                    <input asp-for="tax" type="number" step="0.01" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="expiry_date" class="form-label">Expiry Date</label>
                    <input asp-for="expiry_date" type="date" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="status" class="form-label">Status</label>
                    <select asp-for="status" class="form-control">
                        <option value="Available">Available</option>
                        <option value="Out of Stock">Out of Stock</option>
                        <option value="Discontinued">Discontinued</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="description" class="form-label">Description (Optional)</label>
                    <textarea asp-for="description" rows="3" class="form-control" data-val="false"></textarea>
                </div>
            </div>

            <!-- Actions -->
            <div class="form-actions-sticky">
                <a asp-action="Index" class="btn-secondary">
                    Cancel
                </a>
                <button type="submit" class="btn-primary">
                    <i class="ph-check"></i>
                    Update Product
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const qtyInput = document.querySelector('input[name="qty_unit_type"]');
        const priceInput = document.querySelector('input[name="price"]');
        const discountInput = document.querySelector('input[name="discount"]');
        const statusSelect = document.querySelector('select[name="status"]');

        function checkQuantity() {
            const qtyValue = qtyInput.value.trim();
            const isZeroQty = qtyValue === '0' || qtyValue.startsWith('0 ');
            if (isZeroQty) {
                priceInput.value = '0';
                discountInput.value = '0';
                statusSelect.value = 'Out of Stock';
                priceInput.disabled = true;
                discountInput.disabled = true;
            } else {
                priceInput.disabled = false;
                discountInput.disabled = false;
            }
        }

        function validateDiscount() {
            const price = parseFloat(priceInput.value) || 0;
            const discount = parseFloat(discountInput.value) || 0;
            if (discount > price) {
                alert('Discount cannot be greater than the price!');
                discountInput.value = '0';
            }
        }

        qtyInput.addEventListener('input', checkQuantity);
        qtyInput.addEventListener('blur', checkQuantity);
        discountInput.addEventListener('blur', validateDiscount);
        priceInput.addEventListener('blur', validateDiscount);

        document.querySelector('form').addEventListener('submit', function(e) {
            const price = parseFloat(priceInput.value) || 0;
            const discount = parseFloat(discountInput.value) || 0;
            if (discount > price) {
                e.preventDefault();
                alert('Discount cannot be greater than the price!');
                discountInput.focus();
                return false;
            }
            priceInput.disabled = false;
            discountInput.disabled = false;
        });

        checkQuantity();
    });
</script>
