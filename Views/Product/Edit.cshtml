@model E_Invoice_system.Models.ProductService

<div class="card" style="max-width: 1200px; margin: 2rem auto; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); border: none; border-radius: 12px;">
    <div class="card-header">
        <div class="card-title">Edit Product #@Model.id</div>
    </div>

    <form asp-action="Edit" method="post" style="padding: 2rem;">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="id" />
        <input type="hidden" asp-for="date" />

        <!-- Product Name & Quantity -->
        <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem; margin-bottom: 1.5rem;">
            <div>
                <label style="display: block; font-size: 0.85rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.75rem;">Item/Service Name</label>
                <input asp-for="prod_name_service" placeholder="e.g. Laptop Repair, Web Design" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none; font-family: inherit; box-sizing: border-box;" required />
                <span asp-validation-for="prod_name_service" style="color: #ef4444; font-size: 0.75rem;"></span>
            </div>
            <div>
                <label style="display: block; font-size: 0.85rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.75rem;">Quantity / Unit Type</label>
                <input asp-for="qty_unit_type" placeholder="e.g. 1 Unit, 5 Hours" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none; font-family: inherit; box-sizing: border-box;" />
            </div>
        </div>

        <!-- Price, Discount & Tax -->
        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 2rem; margin-bottom: 1.5rem;">
            <div>
                <label style="display: block; font-size: 0.85rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.75rem;">Price ($)</label>
                <input asp-for="price" type="number" step="0.01" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none; font-family: inherit; box-sizing: border-box;" required />
            </div>
            <div>
                <label style="display: block; font-size: 0.85rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.75rem;">Discount ($)</label>
                <input asp-for="discount" type="number" step="0.01" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none; font-family: inherit; box-sizing: border-box;" />
            </div>
            <div>
                <label style="display: block; font-size: 0.85rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.75rem;">Tax (%)</label>
                <input asp-for="tax" type="number" step="0.01" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none; font-family: inherit; box-sizing: border-box;" />
            </div>
        </div>

        <!-- Expiry Date & Status -->
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 1.5rem;">
            <div>
                <label style="display: block; font-size: 0.85rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.75rem;">Expiry Date</label>
                <input asp-for="expiry_date" type="date" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none; font-family: inherit; box-sizing: border-box;" />
            </div>
            <div>
                <label style="display: block; font-size: 0.85rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.75rem;">Status</label>
                <select asp-for="status" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none; font-family: inherit; background: white; box-sizing: border-box; display: block;">
                    <option value="Available">Available</option>
                    <option value="Out of Stock">Out of Stock</option>
                    <option value="Discontinued">Discontinued</option>
                </select>
            </div>
        </div>

        <!-- Description -->
        <div style="margin-bottom: 2rem;">
            <label style="display: block; font-size: 0.85rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.75rem;">Description</label>
            <textarea asp-for="description" rows="3" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none; font-family: inherit; resize: vertical; box-sizing: border-box;"></textarea>
        </div>

        <!-- Actions -->
        <div style="display: flex; gap: 1rem; margin-top: 2rem; justify-content: flex-end;">
            <button type="submit" class="btn-primary" style="padding: 0.8rem 2rem; font-weight: 600;">Update Product</button>
            <a asp-action="Index" class="btn-primary" style="background: #fff; color: var(--text); border: 1px solid var(--border); padding: 0.8rem 2rem; font-weight: 600;">Cancel</a>
        </div>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const qtyInput = document.querySelector('input[name="qty_unit_type"]');
        const priceInput = document.querySelector('input[name="price"]');
        const discountInput = document.querySelector('input[name="discount"]');
        const statusSelect = document.querySelector('select[name="status"]');

        function checkQuantity() {
            const qtyValue = qtyInput.value.trim();
            const isZeroQty = qtyValue === '0' || qtyValue.startsWith('0 ');
            if (isZeroQty) {
                priceInput.value = '0';
                discountInput.value = '0';
                statusSelect.value = 'Out of Stock';
                priceInput.disabled = true;
                discountInput.disabled = true;
            } else {
                priceInput.disabled = false;
                discountInput.disabled = false;
            }
        }

        function validateDiscount() {
            const price = parseFloat(priceInput.value) || 0;
            const discount = parseFloat(discountInput.value) || 0;
            if (discount > price) {
                alert('Discount cannot be greater than the price!');
                discountInput.value = '0';
            }
        }

        qtyInput.addEventListener('input', checkQuantity);
        qtyInput.addEventListener('blur', checkQuantity);
        discountInput.addEventListener('blur', validateDiscount);
        priceInput.addEventListener('blur', validateDiscount);

        document.querySelector('form').addEventListener('submit', function(e) {
            const price = parseFloat(priceInput.value) || 0;
            const discount = parseFloat(discountInput.value) || 0;
            if (discount > price) {
                e.preventDefault();
                alert('Discount cannot be greater than the price!');
                discountInput.focus();
                return false;
            }
            priceInput.disabled = false;
            discountInput.disabled = false;
        });

        checkQuantity();
    });
</script>
