@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - E-Invoice System</title>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="login-wrapper">
        <!-- Left Panel with Background -->
        <div class="left-panel">
            <div class="overlay-content">
                <h2 id="rotating-text" style="transition: all 0.5s ease-in-out; transform: translateY(0); opacity: 1;">"E-Invoice System - SATA"</h2>
            </div>
        </div>

        <!-- Right Panel with Login Form -->
        <div class="right-panel">
            <div class="login-card">
                <!-- Logo -->
                <div class="logo-section">
                    <img src="/images/sata-logo.png" alt="SATA Technologies" class="logo" />
                </div>

                <!-- Welcome Text -->
                <div class="welcome-section">
                    <h1>Welcome Back !</h1>
                    <p>Sign in to continue</p>
                </div>

                <div asp-validation-summary="ModelOnly" style="color: #ef4444; font-size: 0.85rem; margin-bottom: 1rem; text-align: center; list-style: none; padding: 0;"></div>

                <!-- Login Form -->
                <form asp-action="Login" method="post" class="login-form">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="Enter your email" required />
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" placeholder="Enter password" required />
                    </div>

                    <button type="submit" class="btn-login" style="margin-top: 1rem;">Login</button>
                </form>
            </div>
        </div>
    </div>

    <!-- External Footer -->
    <div class="login-footer-external">
        <p>© 2026 E-Invoice System. Crafted with ❤️ by SATA Technologies Pvt. Ltd.</p>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Auto-focus email field for faster typing
            document.getElementById('email').focus();

            const texts = [
                '"E-Invoice System - SATA"',
                '"Fast & Secure Invoicing"',
                '"Manage Your Sales Easily"'
            ];
            let currentIndex = 0;
            const textElement = document.getElementById('rotating-text');   

            setInterval(() => {
                // Animate Out: Slide to Right & Fade Out
                textElement.style.transition = 'all 0.6s ease-in';
                textElement.style.opacity = '0';
                textElement.style.transform = 'translateX(50px)'; // Move right

                setTimeout(() => {
                    // Reset: Move to Left (Invisible)
                    currentIndex = (currentIndex + 1) % texts.length;
                    textElement.innerText = texts[currentIndex];
                    textElement.style.transition = 'none'; // Disable transition for instant reset
                    textElement.style.transform = 'translateX(-50px)'; // Start from left
                    
                    // Trigger reflow
                    void textElement.offsetWidth;

                    // Animate In: Slide to Center (Fade In)
                    textElement.style.transition = 'all 0.6s ease-out';
                    textElement.style.opacity = '1';
                    textElement.style.transform = 'translateX(0)';
                }, 600);

            }, 3000); 
        });
    </script>
</body>
</html>
</html>
